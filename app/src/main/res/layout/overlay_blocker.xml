<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlayRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"> <!-- semi-transparent black -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/tvBlockedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus Mode Active\nStay away from distractions!"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/overlay_message_bg" />

        <Button
            android:id="@+id/btnCloseOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I understand"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white" />
    </LinearLayout>
</FrameLayout>
