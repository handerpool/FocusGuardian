<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header with gradient accent -->
    <RelativeLayout
        android:paddingTop="48dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Background gradient overlay -->
        <View
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="-50dp"
            android:alpha="0.12"
            android:background="@drawable/bg_circle_focus_enhanced" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Badge -->
            <TextView
                android:text="ðŸ“± STEP 1"
                android:textSize="11sp"
                android:textColor="#FF9500"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:background="@drawable/bg_badge_orange"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Choose\ndistracting apps"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Select apps you want to block during focus sessions"
                android:textSize="15sp"
                android:textColor="#8E8E93"
                android:lineSpacingExtra="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Selected Counter Card -->
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/bg_counter_card"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:padding="18dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:background="@drawable/bg_icon_circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:text="ðŸŽ¯"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSelectedCount"
                android:text="0 APPS SELECTED"
                android:textSize="13sp"
                android:textColor="#FF9500"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Tap apps below to select"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Animated indicator -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_circle_focus_enhanced"
            android:alpha="0.8" />
    </LinearLayout>

    <!-- Apps List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:scrollbars="none"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/listContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp" />
    </ScrollView>

    <!-- Bottom Actions with gradient -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_gradient"
        android:paddingTop="20dp"
        android:paddingBottom="32dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:elevation="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Continue Button with glow -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp">

            <!-- Glow effect -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:alpha="0.4"
                android:background="@drawable/bg_button_glow_primary" />

            <LinearLayout
                android:id="@+id/btnSaveApps"
                android:orientation="horizontal"
                android:background="@drawable/bg_button_gradient_primary"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Continue"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="  â†’"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>

        <!-- Cancel Button -->
        <LinearLayout
            android:id="@+id/btnCancel"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:text="Cancel"
                android:textSize="15sp"
                android:textColor="#8E8E93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>