<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#0A0A0A"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Logo -->
    <ImageView
        android:src="@drawable/ic_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="FocusGuardian Logo" />

    <!-- Title -->
    <TextView
        android:text="ðŸŽ¯ FocusGuardian"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvWelcome"
        android:text="Stay focused, stay productive"
        android:textSize="14sp"
        android:textColor="#8E8E93"
        android:layout_marginBottom="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Selected Apps Display -->
    <LinearLayout
        android:orientation="vertical"
        android:background="#1C1C1E"
        android:padding="20dp"
        android:layout_marginBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="BLOCKED APPS"
            android:textSize="10sp"
            android:textColor="#8E8E93"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSelectedApps"
            android:text="No apps selected yet"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Select Apps Button -->
    <Button
        android:id="@+id/btnSelectApps"
        android:text="Select Apps to Block"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_secondary"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false" />

    <!-- Start Focus Button -->
    <Button
        android:id="@+id/btnStartFocus"
        android:text="Start Focus"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_primary"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textAllCaps="false" />

    <!-- Session Info -->
    <TextView
        android:text="â±ï¸ Default session: 25 minutes"
        android:textSize="12sp"
        android:textColor="#8E8E93"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Help Text -->
    <TextView
        android:text="ðŸ’¡ Tip: Grant permissions when prompted for full functionality"
        android:textSize="11sp"
        android:textColor="#8E8E93"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>