<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingBottom="32dp">

        <!-- Header Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="32dp">

            <TextView
                android:text="FocusGuardian"
                android:textSize="14sp"
                android:textColor="#8E8E93"
                android:letterSpacing="0.15"
                android:textAllCaps="true"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvWelcome"
                android:text="Earn your\nscreen time."
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:lineSpacingExtra="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Focus Circle Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_marginBottom="32dp">

            <!-- Concentric Circles Background -->
            <View
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_circle_focus" />

            <!-- Center Content -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <!-- Emoji Icon -->
                <TextView
                    android:id="@+id/tvFocusEmoji"
                    android:text="ðŸ’ª"
                    android:textSize="72sp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Status Text -->
                <TextView
                    android:id="@+id/tvFocusStatus"
                    android:text="Tap to Complete"
                    android:textSize="14sp"
                    android:textColor="#8E8E93"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Corner brackets (optional decoration) -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="-100dp"
                android:layout_marginTop="-100dp"
                android:background="#22FFFFFF" />
        </RelativeLayout>

        <!-- Activity Card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card_premium"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title Row -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <TextView
                    android:text="ðŸ’ª "
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Focus Session"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvSessionDuration"
                    android:text="25m"
                    android:textSize="14sp"
                    android:textColor="#FF9500"
                    android:background="#33FF9500"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="Today's one thing"
                android:textSize="12sp"
                android:textColor="#636366"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvSelectedApps"
                android:text="No apps selected yet"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- Select Apps Button -->
            <LinearLayout
                android:id="@+id/btnSelectApps"
                android:orientation="horizontal"
                android:background="@drawable/bg_button_secondary"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:text="ðŸ“±"
                    android:textSize="24sp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Select Apps to Block"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="â†’"
                    android:textSize="20sp"
                    android:textColor="#8E8E93"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Start Focus Button -->
            <LinearLayout
                android:id="@+id/btnStartFocus"
                android:orientation="horizontal"
                android:background="@drawable/bg_button_primary"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <TextView
                    android:text="âš¡"
                    android:textSize="28sp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvStartButtonText"
                    android:text="Start Focus"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Tip -->
        <TextView
            android:text="ðŸ’¡ Complete your daily task to unlock apps"
            android:textSize="13sp"
            android:textColor="#636366"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>