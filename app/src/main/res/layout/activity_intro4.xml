                android:text="4 of 4"
                android:textSize="12sp"
                android:textColor="#636366"
                android:layout_marginBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

