<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow for active state -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#30FF9500"
                android:endColor="#00FF9500"
                android:gradientRadius="150dp"
                android:type="radial" />
            <size android:width="300dp" android:height="300dp" />
        </shape>
    </item>
    <!-- Animated ring 1 -->
    <item android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#50FF9500" />
            <size android:width="280dp" android:height="280dp" />
        </shape>
    </item>
    <!-- Animated ring 2 -->
    <item android:top="30dp" android:bottom="30dp" android:left="30dp" android:right="30dp">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#70FF9500" />
            <size android:width="240dp" android:height="240dp" />
        </shape>
    </item>
    <!-- Animated ring 3 -->
    <item android:top="50dp" android:bottom="50dp" android:left="50dp" android:right="50dp">
        <shape android:shape="oval">
            <stroke android:width="3dp" android:color="#90FF9500" />
            <size android:width="200dp" android:height="200dp" />
        </shape>
    </item>
    <!-- Main circle with orange tint -->
    <item android:top="70dp" android:bottom="70dp" android:left="70dp" android:right="70dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#3C2C1E"
                android:endColor="#2C1C0E"
                android:angle="135" />
            <stroke android:width="3dp" android:color="#FF9500" />
            <size android:width="160dp" android:height="160dp" />
        </shape>
    </item>
</layer-list>
