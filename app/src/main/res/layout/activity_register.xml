<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Back Button and Header -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btnBack"
                    android:text="â†"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Create Account"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Welcome Text -->
            <TextView
                android:text="Join FocusGuardian ðŸŽ¯"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Take control of your screen time and build better habits"
                android:textSize="14sp"
                android:textColor="#8E8E93"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Display Name Input -->
            <TextView
                android:text="Display Name"
                android:textSize="14sp"
                android:textColor="#8E8E93"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etDisplayName"
                android:hint="What should we call you?"
                android:textColor="#FFFFFF"
                android:textColorHint="#636366"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:background="@drawable/bg_input_selector"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="56dp" />

            <!-- Email Input -->
            <TextView
                android:text="Email"
                android:textSize="14sp"
                android:textColor="#8E8E93"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etEmail"
                android:hint="Enter your email"
                android:textColor="#FFFFFF"
                android:textColorHint="#636366"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_input_selector"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="56dp" />

            <!-- Password Input -->
            <TextView
                android:text="Password"
                android:textSize="14sp"
                android:textColor="#8E8E93"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etPassword"
                android:hint="Create a password (min 6 characters)"
                android:textColor="#FFFFFF"
                android:textColorHint="#636366"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_selector"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="56dp" />

            <!-- Confirm Password Input -->
            <TextView
                android:text="Confirm Password"
                android:textSize="14sp"
                android:textColor="#8E8E93"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:hint="Confirm your password"
                android:textColor="#FFFFFF"
                android:textColorHint="#636366"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_selector"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="56dp" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/tvError"
                android:textSize="14sp"
                android:textColor="#FF3B30"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:text="Create Account"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_primary"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="56dp" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:indeterminateTint="#FF9500"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <!-- Terms Notice -->
            <TextView
                android:text="By creating an account, you agree to our Terms of Service and Privacy Policy"
                android:textSize="12sp"
                android:textColor="#636366"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Divider -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="#2C2C2E"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="  or  "
                    android:textSize="14sp"
                    android:textColor="#636366"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:background="#2C2C2E"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Login Link -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Already have an account? "
                    android:textSize="14sp"
                    android:textColor="#8E8E93"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvLogin"
                    android:text="Login"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
