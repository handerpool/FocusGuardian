<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="48dp"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Back Button and Header -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/btnBack"
                    android:background="@drawable/bg_icon_circle"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="44dp"
                    android:layout_height="44dp">

                    <TextView
                        android:text="â†"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <TextView
                    android:text="Create Account"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Welcome Text with Icon -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Join FocusGuardian"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="-0.02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text=" ðŸŽ¯"
                    android:textSize="28sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="Take control of your screen time and build better habits"
                android:textSize="15sp"
                android:textColor="#8E8E93"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Display Name Input -->
            <TextView
                android:text="DISPLAY NAME"
                android:textSize="12sp"
                android:textColor="#636366"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etDisplayName"
                android:hint="What should we call you?"
                android:textColor="#FFFFFF"
                android:textColorHint="#636366"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:background="@drawable/bg_input_enhanced_selector"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <!-- Email Input -->
            <TextView
                android:text="EMAIL"
                android:textSize="12sp"
                android:textColor="#636366"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etEmail"
                android:hint="Enter your email"
                android:textColor="#FFFFFF"
                android:textColorHint="#636366"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_input_enhanced_selector"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <!-- Password Input -->
            <TextView
                android:text="PASSWORD"
                android:textSize="12sp"
                android:textColor="#636366"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etPassword"
                android:hint="Min 6 characters"
                android:textColor="#FFFFFF"
                android:textColorHint="#636366"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_enhanced_selector"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <!-- Confirm Password Input -->
            <TextView
                android:text="CONFIRM PASSWORD"
                android:textSize="12sp"
                android:textColor="#636366"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:hint="Confirm your password"
                android:textColor="#FFFFFF"
                android:textColorHint="#636366"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_enhanced_selector"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/tvError"
                android:textSize="14sp"
                android:textColor="#FF3B30"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/bg_card_gradient"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:text="Create Account"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_primary_enhanced"
                android:elevation="8dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:indeterminateTint="#FF9500"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <!-- Terms Notice -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_card_gradient"
                android:padding="14dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="ðŸ“‹"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="By creating an account, you agree to our Terms of Service and Privacy Policy"
                    android:textSize="12sp"
                    android:textColor="#636366"
                    android:lineSpacingExtra="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Divider -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="#2C2C2E"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="  OR  "
                    android:textSize="12sp"
                    android:textColor="#636366"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:background="#2C2C2E"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Login Link -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_card_gradient"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Already have an account? "
                    android:textSize="14sp"
                    android:textColor="#8E8E93"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvLogin"
                    android:text="Login"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
