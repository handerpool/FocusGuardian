<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Logo Section with enhanced styling -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="48dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Logo Circle -->
                <FrameLayout
                    android:background="@drawable/bg_circle_focus_enhanced"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:text="ðŸ›¡ï¸"
                        android:textSize="56sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <TextView
                    android:text="FocusGuardian"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="-0.02"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Welcome back! Login to continue"
                    android:textSize="15sp"
                    android:textColor="#8E8E93"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Email Input -->
            <TextView
                android:text="EMAIL"
                android:textSize="12sp"
                android:textColor="#636366"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etEmail"
                android:hint="Enter your email"
                android:textColor="#FFFFFF"
                android:textColorHint="#636366"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_input_enhanced_selector"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <!-- Password Input -->
            <TextView
                android:text="PASSWORD"
                android:textSize="12sp"
                android:textColor="#636366"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etPassword"
                android:hint="Enter your password"
                android:textColor="#FFFFFF"
                android:textColorHint="#636366"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_enhanced_selector"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <!-- Forgot Password -->
            <TextView
                android:id="@+id/tvForgotPassword"
                android:text="Forgot password?"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF9500"
                android:layout_gravity="end"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/tvError"
                android:textSize="14sp"
                android:textColor="#FF3B30"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/bg_card_gradient"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Login Button -->
            <Button
                android:id="@+id/btnLogin"
                android:text="Login"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_primary_enhanced"
                android:elevation="8dp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:indeterminateTint="#FF9500"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <!-- Divider -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="#2C2C2E"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="  OR  "
                    android:textSize="12sp"
                    android:textColor="#636366"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:background="#2C2C2E"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Sign Up Link -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_card_gradient"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Don't have an account? "
                    android:textSize="14sp"
                    android:textColor="#8E8E93"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvSignUp"
                    android:text="Sign up"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
